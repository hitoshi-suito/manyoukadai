<h1>登録済みのユーザー一覧</h1>
<table class="table">
    <tr>
      <th>id</th>
      <th>名前</th>
      <th>登録日</th>
      <th>タスク数</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><%= user.id %></td>
    	<td><%= user.name %></td>
    	<td><%= user.created_at %></td>
      <td><%= user.tasks.count %></td>
      <td><%= link_to 'ユーザ詳細', admin_user_path(user.id) %></td>
      <td><%= link_to 'ユーザを編集する', edit_admin_user_path(user.id), data: {confirm: '編集しますか？'} %></td>
      <td><%= link_to 'ユーザを削除する', admin_user_path(user.id), method: :delete, data: {confirm: '本当に削除していいですか？'} %></td>    
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'ユーザ新規作成', new_admin_user_path %>