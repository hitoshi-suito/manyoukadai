<h1>タスク一覧</h1>
<p><%= notice %></p>
<table>
    <tr>
        <th>タスク内容</th>
    </tr>
    <% @tasks.each do |task| %>
    <tr>
        <td><%= task.details %></td>
        <td><%= link_to '新規投稿', new_task_path %></td>
        <td><%= link_to '詳細画面', task_path(task.id) %></td>
    </tr>
    <% end %>
</table>