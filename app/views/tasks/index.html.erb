<h1>タスク一覧</h1>
<p><%= notice %></p>
<table>
    <tr>
        <th>タスク</th>
        <th>内容</th>
        <th>終了期限</th>
        <th colspan"3"></th>
    </tr>
    <% @tasks.each do |task| %>
    <tr>
        <td class='task_title'><%= task.title %></td>
        <td class='task_deatails'><%= task.details %></td>
        <td class='task_expired_at'><%= task.expired_at %></td>
        <td><%= link_to '詳細画面', task_path(task.id) %></td>
        <td><%= link_to '編集画面', edit_task_path(task.id), data: {confirm: '編集しますか？'} %></td>
        <td><%= link_to '削除', task_path(task.id), method: :delete, data: {confirm: '本当に削除していいですか？'} %></td>
    </tr>
    <% end %>
</table>

<%= link_to '新規投稿', new_task_path %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>