<h2>詳細画面</h2>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先度</th>
    <th>ラベル</th>
  </tr>
  <tr>
    <td><%= @task.title %></td>
    <td><%= @task.details %></td>
    <td><%= simple_time(@task.expired_at) %></td>
    <td><%= @task.status %></td>
    <td><%= @task.priority %></td>
    <% @task.labels.each do |label| %>
      <td><%= label.name %></td>
    <% end %>
  </tr>
</table>

<%= link_to '一覧に戻る', tasks_path %>

